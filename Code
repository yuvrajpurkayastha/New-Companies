SELECT
    C.CC, C.F, L.CNT, S.CNT, M.CNT, E.CNT
FROM
    (SELECT DISTINCT C.COMPANY_CODE CC, C.FOUNDER F FROM COMPANY C) C
    JOIN
        (SELECT L.COMPANY_CODE CC, COUNT(DISTINCT L.LEAD_MANAGER_CODE) CNT FROM LEAD_MANAGER L GROUP BY CC) L
    ON C.CC = L.CC
    JOIN
        (SELECT S.COMPANY_CODE CC, COUNT(DISTINCT S.SENIOR_MANAGER_CODE) CNT FROM SENIOR_MANAGER S GROUP BY CC) S
    ON C.CC = S.CC
    JOIN
        (SELECT M.COMPANY_CODE CC, COUNT(DISTINCT M.MANAGER_CODE) CNT FROM MANAGER M GROUP BY CC) M
    ON C.CC = M.CC
    JOIN
        (SELECT E.COMPANY_CODE CC, COUNT(DISTINCT E.EMPLOYEE_CODE) CNT FROM EMPLOYEE E GROUP BY CC) E
    ON C.CC = E.CC
ORDER BY C.CC;
